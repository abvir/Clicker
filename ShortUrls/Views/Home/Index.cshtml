@{
    ViewData["Title"] = "Clicker";
}

<div class="container container-lg mt-5 w-50">
    <div class="row">
        <div class="col-auto">
            <a href="/" >
                <img src="./images/logo.gif" height="96" width="96"/>
            </a>    
        </div>
        <div class="col pt-4">
            <h1>Clicker</h1>
        </div>
    </div>
    <div class="row mt-2 mb-2">
        <div class="col-12">
            <span class="main-screen_text">
                Help customers quickly find your page on the Internet. Thanks to a short link, customers will not have to see long URLs that take up a lot of space.
            </span>
        </div>
    </div>

    <form method="post" class="row" action="/shorten_url">
        <div class="col-lg-8 col-12 mt-1">
            <input class="form-control p-3 m-0" type="text" id="originalUrl" name="originalUrl" placeholder="Enter the link you want to shorten" required />
        </div>

        <button class="col-lg-4 col-12 btn btn-warning mt-1 p-3" type="submit">Reduce</button>

    </form>

    <div class="row mt-2">
        @if (!string.IsNullOrEmpty(ViewBag.ShortUrl))
        {
            <div class="col-lg-8 col-12 pt-3">
                <p>
                    Shortened URL:
                    <a href="@ViewBag.ShortUrl" class="link-secondary" id="short_url">
                        @ViewBag.ShortUrl
                    </a>
                </p>
            </div>
            <button class="col-lg-4 col-12 btn btn-success p-2" onclick="copyToClipboard()">Copy</button>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="col-12">
                <p>
                    @ViewBag.Error
                </p>
            </div>
        }
    </div>
</div>


<div aria-live="polite" aria-atomic="true" style="position: relative;">
    <div class="toast" style="position: absolute; top: 0; left: calc(50% - 100px); width:200px">
        <div class="toast-body">
            Copied to clipboard.
        </div>
    </div>
</div>